{
  "version": "0.1.4",
  "main": "index.js",
  "bin": "run.js",
  "name": "mocha-headless-server",
  "description": "Run Mocha tests via headless browsers with HTTP server",
  "repository": "git@github.com:samthor/mocha-headless-server.git",
  "author": "Sam Thorogood <sam.thorogood@gmail.com>",
  "license": "Apache-2.0",
  "private": false,
  "dependencies": {
    "chalk": "^3.0.0",
    "chai": "^4",
    "dhost": "^0.1.9",
    "mocha": "^7",
    "mri": "^1",
    "puppeteer": "^2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "polka": "^0.5.2"
  },
  "scripts": {
    "test": "npm-run-all --parallel test:cli-pass test:cli-fail test:api",
    "test:cli-pass": "./run.js test/suite-pass.js",
    "test:cli-fail": "! ./run.js test/suite-fail.js",
    "test:api": "./test/test-api.js"
  }
}
